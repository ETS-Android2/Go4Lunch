<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="43dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/auth_bg">

    <include layout="@layout/brand"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/fb_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/facebook_login_btn_txt"
            app:backgroundTint="@color/com_facebook_button_background_color"
            android:padding="14dp"
            android:layout_marginVertical="10dp"
            android:maxWidth="30dp"
            app:icon="@drawable/ic_facebook"
            />

        <Button
            android:id="@+id/google_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/google_login_btn_txt"
            app:backgroundTint="@color/red_bg"
            android:padding="14dp"
            app:icon="@drawable/ic_google"/>
    </LinearLayout>

</LinearLayout>